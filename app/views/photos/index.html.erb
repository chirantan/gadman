
<div class="page-header">
  <h1><%=t '.title', :default => "Gadget photos" %></h1>
</div>

<%= link_to "Back to gadget index",
            gadgets_path,
            :class => 'btn', :style => "float:right" %>

<%= form_for :photos do |p| %>
 <div class="field">
   <%= p.file_field :avatar, :multiple => true, name: "photos[gadget_photo]" %>
   <%= p.submit "Upload", :class => "btn btn-default btn-sm" %>
 </div>
<% end %>
<div class="container">
  <div class="row">
  <% @gadget.photos.each_with_index do |photo, index| -%>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= image_tag photo.gadget_photo.small.url %>
            <div class="caption">
              <h3><%= index + 1 -%></h3>
              <p>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  gadget_photo_path(@gadget, photo),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
              </p>
            </div>
          </div>
        </div>

  <% end -%>
  </div>
</div>



